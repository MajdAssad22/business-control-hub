<Window x:Class="StockControl.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:StockControl"
        
        mc:Ignorable="d"
        Title="SplashScreen" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Image gif:ImageBehavior.AnimatedSource="Images/LoadAnimation.gif" Stretch="Fill" gif:ImageBehavior.AnimationSpeedRatio="0.7" x:Name="Media"/>
    </Grid>
</Window>

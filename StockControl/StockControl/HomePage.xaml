<UserControl x:Class="StockControl.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:StockControl"  
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="774">

        <materialDesign:TransitioningContent x:Name="TransitionSlideHome" OpeningEffect="{materialDesign:TransitionEffect SlideInfromLeft,Duration=0:0:0.2}">
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                        <GradientStop Color="#FF0069C0" Offset="1.9"/>
                        <GradientStop Color="#FF222222" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Width="370" Height="50" FontSize="30" FontFamily="Cooper black" Foreground="LightBlue" VerticalAlignment="Top" Margin="0,35,0,0">
                Warehouse Management
                    </TextBlock>
                    <TextBlock Width="700" Height="200" FontSize="30" FontFamily="Cooper black" Foreground="#FF0069C0" Margin="51,125,49,275">
                        Welcome to the homepage admin
                        <LineBreak/>
                        We hope you have a great time
                        <LineBreak/>
                        Please Enjoy Your Stay
                    </TextBlock>
                </Grid>
            </Border>
        </materialDesign:TransitioningContent>
</UserControl>
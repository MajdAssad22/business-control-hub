<UserControl x:Class="StockControl.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:StockControl"  
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid >
        <TextBlock FontFamily="Cooper black" Foreground="Maroon" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="30">WareHouse Management
        </TextBlock>

        <materialDesign:TransitioningContent x:Name="TransitionSlideHome" OpeningEffect="{materialDesign:TransitionEffect SlideInfromLeft,Duration=0:0:0.2}">
            <Border  Width="auto"  BorderBrush="DarkGoldenrod" BorderThickness="4" Margin="2,50,0,0" >

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                        <GradientStop Color="Firebrick" Offset="0.9"/>
                        <GradientStop Color="#000000" Offset="0.4"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Width="700" FontSize="30" FontFamily="Cooper black" Foreground="Maroon" Margin="10,54,280,351" >
                    Welcome to the homepage admin
                        <LineBreak></LineBreak>
                   
                          <LineBreak></LineBreak>
                        We hope you have a great time
                        <LineBreak></LineBreak>
                        <LineBreak></LineBreak>
                          Please Enjoy Your Stay
                    </TextBlock>

                    <Image Source="Images\warehousestock.jpg" Width="700" Height="340" Stretch="Fill" Margin="6,296,284,6"/>
                </Grid>
            </Border>

        </materialDesign:TransitioningContent>

    </Grid>
</UserControl>

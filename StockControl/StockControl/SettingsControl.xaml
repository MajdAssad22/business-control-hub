<UserControl x:Class="StockControl.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockControl" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource MaterialDesignDarkForeground}" Padding="15">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Back Arrow-->
            <Button x:Name="backArrowBTN"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Go Back"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="backArrowBTN_Click">
                <materialDesign:PackIcon
                            Kind="ArrowBack"/>

            </Button>
            <!--Settings Title!-->
            <Grid Height="40">
                        
                <!--Settings Header!-->
                <TextBlock FontSize="20"
                           Foreground="{StaticResource MaterialDesignDarkBackground}"
                           FontFamily="Cooper Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                   
                     <!--Settings Text!-->
                    <Run Text="Settings"
                         FontFamily="Cooper Black"/>
                </TextBlock>

            </Grid>
            <DockPanel  Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center">


                <TextBox x:Name="taxBox"
                         Width="60"
                         Height="50"             
                         materialDesign:HintAssist.Hint="Tax %"
                         FontSize="20"
                         PreviewTextInput="taxBox_PreviewTextInput"
                         MaxLength="4"/>
                <!--Save Button-->
                <Button Margin="10,0,0,0"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Save All"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Button_Click">
                    <materialDesign:PackIcon
                            Kind="ContentSave"/>

                </Button>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
